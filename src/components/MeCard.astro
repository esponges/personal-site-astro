---
interface Props {
  emoji: string;
  description: string;
}

const { emoji, description } = Astro.props;
---

<div class="flex flex-col gap-4 rounded-xl border border-gray-200 bg-white/10 p-4 hover:bg-white/20">
  <div class="text-5xl">{emoji}</div>
  <p class="text-lg leading-relaxed text-gray-300">
    {description}
  </p>
</div> 
